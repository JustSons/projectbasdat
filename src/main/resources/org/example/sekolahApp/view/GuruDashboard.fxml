<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sekolahApp.controller.GuruDashboardController">
   <top>
      <VBox spacing="10" styleClass="header">
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         <children>
            <Label fx:id="welcomeLabel" text="Selamat Datang, Guru!" styleClass="welcome-label">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Separator />
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" styleClass="content-scroll">
         <content>
            <VBox spacing="20" styleClass="main-content">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <!-- Biodata Guru -->
                  <VBox spacing="10" styleClass="section-box">
                     <children>
                        <Label text="Biodata Guru" styleClass="section-title">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <GridPane hgap="15" vgap="10" styleClass="info-grid">
                           <columnConstraints>
                              <ColumnConstraints minWidth="100" prefWidth="100" />
                              <ColumnConstraints hgrow="ALWAYS" />
                              <ColumnConstraints minWidth="100" prefWidth="100" />
                              <ColumnConstraints hgrow="ALWAYS" />
                           </columnConstraints>
                           <children>
                              <Label text="NIP:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="info-label" />
                              <Label fx:id="nipLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="info-value" />
                              
                              <Label text="Nama:" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="info-label" />
                              <Label fx:id="namaLabel" text="-" GridPane.columnIndex="3" GridPane.rowIndex="0" styleClass="info-value" />
                              
                              <Label text="Jabatan:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="info-label" />
                              <Label fx:id="jabatanLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="info-value" />
                           </children>
                        </GridPane>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>

                  <!-- Jadwal Mengajar -->
                  <VBox spacing="10" styleClass="section-box">
                     <children>
                        <Label text="Jadwal Mengajar" styleClass="section-title">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <TableView fx:id="jadwalTableView" styleClass="data-table">
                           <columns>
                              <TableColumn fx:id="hariColumn" text="Hari" prefWidth="100" />
                              <TableColumn fx:id="jamColumn" text="Jam" prefWidth="150" />
                              <TableColumn fx:id="kelasColumn" text="Kelas" prefWidth="100" />
                              <TableColumn fx:id="mataPelajaranColumn" text="Mata Pelajaran" prefWidth="200" />
                           </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>

                  <!-- Menu Aksi -->
                  <VBox spacing="15" styleClass="section-box">
                     <children>
                        <Label text="Menu Aksi" styleClass="section-title">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                           <children>
                              <Button text="Input Nilai" onAction="#handleInputNilai" styleClass="menu-button" prefWidth="120" prefHeight="50">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Button>
                              <Button fx:id="cetakRaporButton" text="Cetak Rapor" onAction="#handleCetakRapor" styleClass="menu-button" prefWidth="120" prefHeight="50" visible="false">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                        <Label text="Catatan: Menu 'Cetak Rapor' hanya tersedia untuk wali kelas" styleClass="note-text" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <right>
      <VBox spacing="10" styleClass="sidebar" prefWidth="150">
         <padding>
            <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
         </padding>
         <children>
            <Label text="Shortcut Menu" styleClass="sidebar-title">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Separator />
            <VBox spacing="8">
               <children>
                  <Button text="Refresh Data" onAction="#handleRefresh" styleClass="sidebar-button" prefWidth="120" />
                  <Button text="Logout" onAction="#handleLogout" styleClass="logout-button" prefWidth="120" />
               </children>
            </VBox>
         </children>
      </VBox>
   </right>
</BorderPane> 