<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sekolahApp.controller.KelolaSiswaController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="740.0" prefWidth="350.0" spacing="10.0" style="-fx-border-color: lightgray; -fx-padding: 10; -fx-border-radius: 5;">
            <children>
                <Label text="Form Data Siswa">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <GridPane hgap="10.0" vgap="8.0">
                    <children>
                        <Label text="NIS" GridPane.rowIndex="0" />
                        <TextField fx:id="nisField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Nama Lengkap" GridPane.rowIndex="1" />
                        <TextField fx:id="namaField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Tgl. Lahir" GridPane.rowIndex="2" />
                        <DatePicker fx:id="tanggalLahirPicker" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Jenis Kelamin" GridPane.rowIndex="3" />
                        <ComboBox fx:id="jenisKelaminComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Agama" GridPane.rowIndex="4" />
                        <TextField fx:id="agamaField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="Alamat" GridPane.rowIndex="5" />
                        <TextArea fx:id="alamatArea" prefHeight="80.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <Label text="Nama Orang Tua" GridPane.rowIndex="6" />
                        <TextField fx:id="namaOrangTuaField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <Label text="Telepon Orang Tua" GridPane.rowIndex="7" />
                        <TextField fx:id="teleponOrangTuaField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                    </children>
                </GridPane>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" prefWidth="80.0" text="Simpan" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear" prefWidth="80.0" text="Batal" />
                    </children>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </HBox>
                <Button mnemonicParsing="false" onAction="#handleBack" text="Kembali ke Dashboard" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets top="20.0" />
                    </HBox.margin>
                </Button>
            </children>
        </VBox>
        <VBox layoutX="380.0" layoutY="14.0" prefHeight="740.0" prefWidth="630.0" spacing="10.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Cari Siswa (NIS/Nama):" />
                        <TextField fx:id="searchField" prefWidth="300.0" promptText="Ketik untuk mencari..." />
                    </children>
                </HBox>
                <TableView fx:id="siswaTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="nisColumn" prefWidth="120.0" text="NIS" />
                        <TableColumn fx:id="namaColumn" prefWidth="250.0" text="Nama Siswa" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleDelete" prefWidth="100.0" text="Hapus" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>