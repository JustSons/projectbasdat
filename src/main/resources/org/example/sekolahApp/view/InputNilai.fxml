<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sekolahApp.controller.InputNilaiController">
    <top>
        <VBox alignment="CENTER" prefWidth="1024.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Halaman Input Nilai">
                    <font><Font name="System Bold" size="36.0" /></font>
                </Label>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label text="Tahun Ajaran:"><font><Font size="14.0" /></font></Label>
                        <ComboBox fx:id="tahunAjaranComboBox" prefWidth="200.0" promptText="-- Pilih Tahun --" />
                        <Label text="Kelas:"><font><Font size="14.0" /></font></Label>
                        <ComboBox fx:id="kelasComboBox" prefWidth="200.0" promptText="-- Pilih Kelas --" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Mata Pelajaran:"><font><Font size="14.0" /></font></Label>
                        <ComboBox fx:id="mapelComboBox" prefWidth="300.0" promptText="-- Pilih Mapel --" />
                    </children>
                </HBox>
            </children>
            <padding><Insets bottom="20.0" top="20.0" /></padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="siswaTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="nisColumn" prefWidth="150.0" text="NIS" />
                <TableColumn fx:id="namaColumn" prefWidth="250.0" text="Nama Siswa" />
                <TableColumn fx:id="ujian1Column" prefWidth="70.0" text="Ujian 1" />
                <TableColumn fx:id="ujian2Column" prefWidth="70.0" text="Ujian 2" />
                <TableColumn fx:id="uts1Column" prefWidth="70.0" text="UTS 1" />
                <TableColumn fx:id="uas1Column" prefWidth="70.0" text="UAS 1" />
                <TableColumn fx:id="ujian3Column" prefWidth="70.0" text="Ujian 3" />
                <TableColumn fx:id="ujian4Column" prefWidth="70.0" text="Ujian 4" />
                <TableColumn fx:id="uts2Column" prefWidth="70.0" text="UTS 2" />
                <TableColumn fx:id="uas2Column" prefWidth="70.0" text="UAS 2" />
            </columns>
            <BorderPane.margin><Insets left="20.0" right="20.0" /></BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
            <Button onAction="#handleSimpan" prefHeight="40.0" prefWidth="150.0" text="Simpan &amp; Refresh" />
            <Button onAction="#handleBack" prefHeight="40.0" prefWidth="150.0" text="Kembali ke Dashboard" />
        </HBox>
    </bottom>
</BorderPane>