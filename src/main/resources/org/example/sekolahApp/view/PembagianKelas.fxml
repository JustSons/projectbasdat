<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sekolahApp.controller.PembagianKelasController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="740.0" prefWidth="350.0" spacing="10.0" style="-fx-border-color: lightgray; -fx-padding: 10; -fx-border-radius: 5;">
            <children>
                <Label text="Pembagian Kelas &amp; Wali Kelas">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <GridPane hgap="10.0" vgap="8.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                    </columnConstraints>
                    <children>
                        <Label text="Tahun Ajaran" GridPane.rowIndex="0" />
                        <ComboBox fx:id="tahunAjaranComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Pilih Kelas" GridPane.rowIndex="1" />
                        <ComboBox fx:id="kelasComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Wali Kelas" GridPane.rowIndex="2" />
                        <ComboBox fx:id="waliKelasComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleSetWaliKelas" prefWidth="120.0" text="Set Wali Kelas" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                    </children>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </HBox>
                <Label text="Siswa Belum Ada Kelas:" />
                <TableView fx:id="siswaBelumKelasTableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="siswaIdBelumKelasColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="siswaNisBelumKelasColumn" prefWidth="80.0" text="NIS" />
                        <TableColumn fx:id="siswaNamaBelumKelasColumn" prefWidth="150.0" text="Nama" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <Button mnemonicParsing="false" onAction="#handleAddSiswaToClass" text="Tambahkan Siswa ke Kelas Terpilih" />
                <Button mnemonicParsing="false" onAction="#handleBack" text="Kembali ke Dashboard">
                    <HBox.margin>
                        <Insets top="20.0" />
                    </HBox.margin>
                </Button>
            </children>
        </VBox>
        <VBox layoutX="380.0" layoutY="14.0" prefHeight="740.0" prefWidth="630.0" spacing="10.0">
            <children>
                <Label text="Siswa di Kelas Terpilih:" />
                <TableView fx:id="siswaDiKelasTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="siswaIdDiKelasColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="siswaNisDiKelasColumn" prefWidth="80.0" text="NIS" />
                        <TableColumn fx:id="siswaNamaDiKelasColumn" prefWidth="150.0" text="Nama" />
                        <TableColumn fx:id="siswaKelasSaatIniColumn" prefWidth="150.0" text="Kelas Saat Ini" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleRemoveSiswaFromClass" prefWidth="150.0" text="Keluarkan dari Kelas" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
                        <Button mnemonicParsing="false" onAction="#handleNaikKelas" prefWidth="150.0" text="Naik Kelas Semua Siswa" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>